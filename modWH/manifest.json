{
	"manifest_version": 2,

	"name": "modWH",
	"description": "Improve the usability of the Hacker News Who's Hiring thread by hiding replies and making job posts collapsible.",
	"version": "1.1",
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	"icons": {
		"16": "assets/icon16.png",
		"32": "assets/icon32.png",
		"48": "assets/icon48.png",
		"128": "assets/icon128.png"
	},
	"page_action": {
		"default_icon": {
			"19": "assets/icon19.png",
			"38": "assets/icon38.png",
			"128": "assets/icon128.png"
		},
		"default_title": "modWH",
		"default_popup": "popup.html"
	},	
	"permissions": [
		"declarativeContent",
		"activeTab",
		"storage",
		"unlimitedStorage"
	]
}